# AetherMind Technologies LLC - Environment Configuration
# =============================================================
# Copy this file to .env and configure with your actual values

# ==================== Database Configuration ====================
# PostgreSQL connection string
DATABASE_URL=postgresql://postgres:your_password@localhost:5432/aethermind_bot

# PostgreSQL password (use a strong password)
POSTGRES_PASSWORD=your_strong_postgres_password_here

# ==================== Redis Configuration ====================
# Redis connection string
REDIS_URL=redis://:your_password@localhost:6379/0

# Redis password (use a strong password)
REDIS_PASSWORD=your_strong_redis_password_here

# ==================== Telegram Bot Configuration ====================
# Telegram Bot Token (required)
# Obtain from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Enable/Disable Telegram Bot
TELEGRAM_BOT_ENABLED=true

# Bot Admin User IDs (comma-separated)
# Example: 123456789,987654321
TELEGRAM_BOT_ADMIN_USERS=

# Bot message rate limit (per minute)
TELEGRAM_BOT_RATE_LIMIT=30

# ==================== API Configuration ====================
# API Key (for protecting API endpoints, use a strong key)
API_KEY=your_secure_api_key_here

# Rate limit (requests per minute)
RATE_LIMIT_PER_MINUTE=120

# ==================== Logging Configuration ====================
# Log level: debug, info, warning, error
LOG_LEVEL=info

# Log format: text, json
LOG_FORMAT=json

# ==================== Application Settings ====================
# Maximum import count
MAX_IMPORT=10000

# Export directory
EXPORT_DIR=./exports

# Application port
APP_PORT=8080

# ==================== Security Configuration ====================
# IP Allowlist (comma-separated, leave empty for no restriction)
IP_ALLOWLIST=

# Metrics endpoint IP allowlist (leave empty to use IP_ALLOWLIST, set '*' for public)
METRICS_IP_ALLOWLIST=

# ==================== Monitoring Configuration ====================
# Grafana admin password
GRAFANA_PASSWORD=admin

# ==================== Multi-Tenant Configuration ====================
# Enable multi-tenancy
MULTI_TENANT_ENABLED=false

# Tenant header name
TENANT_HEADER=x-tenant-id

# Tenant allowlist (comma-separated)
TENANT_ALLOWLIST=

# Enable tenant metrics
TENANT_METRICS_ENABLED=false

# Enforce tenant allowlist
TENANT_ENFORCE_ALLOWLIST=false

# ==================== AI/LLM Configuration ====================
# OpenAI API Key (if using OpenAI)
OPENAI_API_KEY=your_openai_api_key_here

# OpenRouter API Key (if using OpenRouter)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# ==================== Mastra Configuration ====================
# Mastra API endpoint
MASTRA_API_URL=http://localhost:4111

# Inngest API endpoint
INNGEST_API_PORT=3100
INNGEST_DEV_SERVER_URL=http://localhost:3100
